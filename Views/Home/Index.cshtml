<script>// Enrollment tabs functionality
    document.addEventListener('DOMContentLoaded', function () {
        const tabs = document.querySelectorAll('.enrollment-tab');
        const contents = document.querySelectorAll('.enrollment-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabId = tab.getAttribute('data-tab');

                // Update active tab
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                // Show active content
                contents.forEach(content => {
                    content.classList.remove('active');
                    if (content.id === tabId) {
                        content.classList.add('active');
                    }
                });
            });
        });
    });

    function fetchIndustryReports() {
        var query = document.getElementById("industrySearch").value.trim();
        if (!query) {
            alert("Please enter a topic to search for industry reports.");
            return;
        }

        const reportResults = document.getElementById("reportResults");
        const reportList = document.getElementById("reportList");
        const searchButton = document.getElementById("searchButton");
        const searchButtonText = document.getElementById("searchButtonText");

        // Show loading state
        reportResults.style.display = "block";
        reportList.innerHTML = '<li class="report-item"><span class="loading-spinner"></span>Searching for reports...</li>';
        searchButton.disabled = true;
        searchButtonText.textContent = "Searching...";

        fetch('/Home/GetIndustryReports?query=' + encodeURIComponent(query))
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                reportList.innerHTML = "";

                if (data.reportSummary) {
                    // Handle the actual API response structure
                    const summaryItem = document.createElement("li");
                    summaryItem.className = "report-item";
                    summaryItem.innerHTML = `<div style="white-space: pre-wrap;">${data.reportSummary}</div>`;
                    reportList.appendChild(summaryItem);
                } else if (data.length === 0) {
                    reportList.innerHTML = '<li class="report-item">No reports found. Try a different search term.</li>';
                } else {
                    // Handle array response (if structure changes)
                    data.forEach(report => {
                        const li = document.createElement("li");
                        li.className = "report-item";
                        const a = document.createElement("a");
                        a.className = "report-link";
                        a.href = report.Link || "#";
                        a.textContent = report.Title || report;
                        a.target = "_blank";
                        li.appendChild(a);
                        reportList.appendChild(li);
                    });
                }
            })
            .catch(error => {
                console.error('Error fetching reports:', error);
                reportList.innerHTML =
                    '<li class="report-item">⚠️ Error loading reports. Please check your connection and try again.</li>';
            })
            .finally(() => {
                // Reset button state
                searchButton.disabled = false;
                searchButtonText.textContent = "Search";
            });
    }

    // Enhanced event listeners
    document.getElementById("industrySearch")?.addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
            fetchIndustryReports();
        }
    });

    // Clear results when input is cleared
    document.getElementById("industrySearch")?.addEventListener("input", function (event) {
        if (event.target.value.trim() === "") {
            document.getElementById("reportResults").style.display = "none";
        }
    });

    // Add some visual feedback when buttons are clicked
    document.querySelectorAll('.portal-button').forEach(button => {
        button.addEventListener('click', function () {
            this.style.transform = 'translateY(-1px) scale(0.98)';
            setTimeout(() => {
                this.style.transform = '';
            }, 150);
        });
    });</script>