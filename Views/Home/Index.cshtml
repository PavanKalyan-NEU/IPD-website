<style>
    :root {
        --burgundy: #800020;
        --northeastern-red: #C8102E;
    }

    body {
        background: white;
        color: black;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .main-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .header {
        text-align: center;
        margin-bottom: 2rem;
        animation: fadeIn 1s ease-in-out;
    }

        .header h3 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 0.8rem;
            color: black;
        }

        .header p {
            font-size: 1.1rem;
            color: black;
            max-width: 700px;
            margin: 0 auto;
        }

    .button-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 15px;
        margin: 2rem auto;
        max-width: 800px;
    }

    .portal-button {
        background: white;
        border: 1px solid black;
        color: black;
        padding: 1.2rem;
        font-size: 1.1rem;
        border-radius: 0;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        overflow: hidden;
        width: 100%;
        height: 120px;
        box-sizing: border-box;
    }

        .portal-button:hover {
            background: black;
            color: white;
            border-color: var(--burgundy);
        }

    .graduate-programs-button {
        border: 1px solid var(--burgundy);
        color: var(--burgundy);
    }

        .graduate-programs-button:hover {
            background: var(--burgundy);
            color: white;
        }

    /* Special styling for Course Search button */
    .course-search-button {
        border: 2px solid var(--northeastern-red);
        color: var(--northeastern-red);
        font-weight: 600;
    }

        .course-search-button:hover {
            background: var(--northeastern-red);
            color: white;
            border-color: var(--northeastern-red);
        }

        .course-search-button span {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 5px;
        }

        .course-search-button .new-badge {
            background: var(--northeastern-red);
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: bold;
        }

        .course-search-button:hover .new-badge {
            background: white;
            color: var(--northeastern-red);
        }

    .report-section {
        background: white;
        border-radius: 0;
        padding: 1.5rem;
        margin-top: 2rem;
        border: 1px solid black;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

        .report-section h3 {
            font-size: 1.3rem;
            margin-bottom: 1.2rem;
            color: black;
            text-align: center;
        }

    .search-container {
        display: flex;
        gap: 10px;
        margin-bottom: 1.2rem;
    }

    .search-input {
        flex: 1;
        padding: 10px 15px;
        border-radius: 0;
        border: 1px solid black;
        background: white;
        color: black;
        font-size: 0.95rem;
    }

        .search-input:focus {
            outline: none;
            border-color: var(--burgundy);
        }

        .search-input::placeholder {
            color: black;
            opacity: 0.5;
        }

    .search-button {
        padding: 10px 20px;
        background: black;
        color: white;
        border: 1px solid black;
        border-radius: 0;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .search-button:hover {
            background: var(--burgundy);
            border-color: var(--burgundy);
        }

        .search-button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .report-results {
        margin-top: 1.5rem;
        display: none;
        animation: fadeIn 0.4s ease-out;
    }

    .report-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .report-item {
        background: white;
        border-radius: 0;
        padding: 0.8rem;
        margin-bottom: 0.8rem;
        transition: all 0.2s ease;
        border-left: 3px solid black;
    }

        .report-item:hover {
            border-left-color: var(--burgundy);
        }

    .report-link {
        color: black;
        text-decoration: none;
        font-weight: 500;
        display: block;
    }

        .report-link:hover {
            color: var(--burgundy);
        }

        .report-link::before {
            content: '→';
            margin-right: 8px;
            color: var(--burgundy);
            font-weight: bold;
        }

    .loading-spinner {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(0, 0, 0, 0.3);
        border-radius: 50%;
        border-top-color: var(--burgundy);
        animation: spin 1s ease-in-out infinite;
        margin-right: 10px;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .status-indicator {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--burgundy);
    }

    /* Enrollment Dashboard Tabs */
    .enrollment-section {
        background: white;
        border-radius: 0;
        padding: 1.5rem;
        margin-top: 2rem;
        border: 1px solid black;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

        .enrollment-section h3 {
            font-size: 1.3rem;
            margin-bottom: 1.2rem;
            color: black;
            text-align: center;
        }

    .enrollment-tabs {
        display: flex;
        border-bottom: 1px solid #ddd;
        margin-bottom: 1.2rem;
    }

    .enrollment-tab {
        padding: 10px 20px;
        background: none;
        border: none;
        cursor: pointer;
        font-weight: 600;
        color: #777;
        border-bottom: 3px solid transparent;
        transition: all 0.3s ease;
    }

        .enrollment-tab.active {
            color: var(--burgundy);
            border-bottom-color: var(--burgundy);
        }

        .enrollment-tab:hover:not(.active) {
            color: black;
        }

    .enrollment-content {
        display: none;
        padding: 1rem;
        border: 1px solid #eee;
        border-top: none;
    }

        .enrollment-content.active {
            display: block;
            animation: fadeIn 0.4s ease-out;
        }

    .enrollment-button {
        display: inline-block;
        padding: 10px 20px;
        background: black;
        color: white;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 1px solid black;
    }

        .enrollment-button:hover {
            background: var(--burgundy);
            border-color: var(--burgundy);
            color: white;
        }

    .enrollment-description {
        margin-bottom: 1.2rem;
        line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .button-grid {
            grid-template-columns: 1fr;
            gap: 12px;
            max-width: 500px;
        }

        .header h3 {
            font-size: 1.8rem;
        }

        .portal-button {
            height: 100px;
            font-size: 1rem;
        }

        .search-container {
            flex-direction: column;
        }

        .enrollment-tabs {
            flex-direction: column;
        }

        .enrollment-tab {
            border-bottom: 1px solid #ddd;
            border-left: 3px solid transparent;
        }

            .enrollment-tab.active {
                border-left-color: var(--burgundy);
                border-bottom: 1px solid #ddd;
            }
    }

    @@media (max-width: 480px) {
        .main-container {
            padding: 1.5rem 0.8rem;
        }

        .header h3 {
            font-size: 1.6rem;
        }

        .portal-button {
            padding: 1rem;
            height: 90px;
        }
    }
</style>

