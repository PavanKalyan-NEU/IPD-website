@{
    ViewData["Title"] = "Query Submitted";
    var query = ViewBag.Query as USPTOQueryBuilder.Models.PatentQuery;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Query Submitted Successfully!</h2>
                    <p class="lead">Your query has been queued for processing.</p>

                    <div class="alert alert-info mt-4">
                        <strong>Query ID:</strong> @query.QueryId<br />
                        <strong>Status:</strong> <span id="queryStatus">@query.Status</span>
                    </div>

                    <p>You will receive an email at <strong>@query.UserEmail</strong> with download instructions once your query is complete.</p>
                    <p class="text-muted">Processing time varies based on query complexity and result size.</p>

                    <div id="downloadSection" style="display:none;" class="mt-4">
                        <a id="downloadLink" class="btn btn-success" href="#">
                            <i class="fas fa-download"></i> Download Results
                        </a>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Builder" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create New Query
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Poll for query status
        const queryId = '@query.QueryId';
        const checkStatus = () => {
            fetch(`/Query/Status?queryId=${queryId}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('queryStatus').textContent = data.status;

                    if (data.status === 'Completed' || data.status === 'EmailSent') {
                        document.getElementById('downloadSection').style.display = 'block';
                        document.getElementById('downloadLink').href = `/Results/Download?queryId=${queryId}`;
                        clearInterval(statusInterval);
                    } else if (data.status === 'Failed') {
                        clearInterval(statusInterval);
                    }
                });
        };

        const statusInterval = setInterval(checkStatus, 5000);
    </script>
}